<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".latihan9A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="-96dp"
        android:background="#C50B0B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Mahasiswa"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/instiki"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/instiki" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="0"
                android:background="@drawable/styletambah"
                app:srcCompat="@drawable/tambah" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTambah"
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:background="@drawable/styletambah"
                android:text="Tambah Data"
                android:textColor="#ffff"
                android:textSize="20dp"
                android:visibility="visible"
                tools:ignore="MissingClass" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="0"
                android:background="@drawable/styledelete"
                app:srcCompat="@drawable/delete" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnHapus"
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:background="@drawable/styledelete"
                android:text="Hapus Data"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="0"
                android:background="@drawable/styleinfo"
                app:srcCompat="@drawable/info" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnInfo"
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:background="@drawable/styleinfo"
                android:text="Informasi"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>