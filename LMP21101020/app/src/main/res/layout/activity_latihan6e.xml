<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view"
    tools:context=".latihan6e">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="401dp"
        android:layout_height="99dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="56dp"
        android:text="KUDANIL"
        android:textAlignment="center"
        android:textColor="#F2F4FB"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="411dp"
        android:layout_height="283dp"
        android:text="Kudanil adalah hewan mamalia yang memiliki ciri khas berupa tubuh besar, kompak, dan dilengkapi dengan cakar-cakar yang kuat. Mereka termasuk dalam famili Suidae dan merupakan hewan asli Afrika dan Asia Tenggara. Kudanil memiliki beberapa karakteristik yang membedakannya dari hewan lain, seperti tubuh yang berotot, hidung yang mirip beluncur, dan taring yang melengkung."
        android:textAlignment="center"
        android:textColor="#EAEBF1"
        android:textSize="20dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.964" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="338dp"
        android:layout_height="298dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.445"
        app:srcCompat="@drawable/kudanil" />

</androidx.constraintlayout.widget.ConstraintLayout>